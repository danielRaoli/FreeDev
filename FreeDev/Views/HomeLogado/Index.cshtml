@using FreeDev.Models.Entities;
@model IEnumerable<UsuarioDevModel>

@{
    ViewData["title"] = "Analistas e Desenvolvedores";
}

<div style="margin-bottom:40px" class="text-center">
    <h1>@ViewData["title"]</h1>
</div>
<hr />


<div class="container-fluid">
    <div class="row">

        @foreach(var modelItem in Model){
            <div class="card" style="width: 18rem; margin-right:20px">
                <div class="row align-items-center" style="margin-top:10px;height:100px">
                    <div class="col" style="margin-left:0">
                        <div class="container" style="width:78px;height:78px;margin-top:10px;margin-left:0">
                            @if (modelItem.FotoPerfil == null)
                            {
                                <img style="width:78px;height:78px;" src="~/lib/Imagens/perfilvazio.png" class="card-img-top" alt="...">
                            }
                            else{
                                var base64 = Convert.ToBase64String(modelItem.FotoPerfil);
                                var imgSrc = string.Format("data:/image/gif;base64,{0}", base64);
                                <img src="@imgSrc" style="width:78px;height:78px;" />
                            }
                        </div>
                    </div>
                    <div class="col" style="margin-right:4px">
                        <h5 class="card-title">@modelItem.Nome</h5>
                    </div>
                </div>
                <div class="card-body">
                    <h5>Avalições: 4,5</h5>
                    <p class="card-text">@modelItem.Descricao</p>
                   <a role="button" class="btn btn-primary" href=mailto:@modelItem.Email?subject="link HTML" >Entrar em contato</a>
                </div>
            </div>
        }
    </div>
</div>

