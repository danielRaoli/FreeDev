@model FreeDev.Models.Entities.UsuarioModel;

@{
    ViewData["title"] = "Perfil";
}

<div style="margin-bottom:40px" class="text-center">
    <h1>@ViewData["title"]</h1>
</div>
@if(TempData["alertSuccess"] != null){
    <div role="alert" class="alert alert-success">
        @TempData["alertError"]
        <button type="button" class="btn btn-danger btn-close btn-sm closer-alert" arial-label="Close">X</button>
    </div>
}

<hr />

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.Nome</h5>
        <dl class="list-group list-group-flush">
            <dt>Email</dt>
            <dd class="list-group-item">@Model.Email</dd>
            <dt>Telefone</dt>
            <dd class="list-group-item">@Model.Telefone</dd>
        </dl>
    </div>
    <div class="card-body">
        <a role="button" class="btn btn-outline-primary" asp-action="Perfil" asp-controller="Usuario">editar perfil</a>
        <a role="button" class="btn btn-outline-primary" asp-action="AlterarSenha" asp-controller="Usuario">alterar senha</a>
    </div>
</div>